@model Reply



<form method="post" class="mt-5" asp-action=" DeleteAnswered">

    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3"> Delete The Answered</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label>Quesion</label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="GetQuery.Title" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Answered by</label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="GetAccount.FullName" class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Content"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Content" class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100">Delete</button>
                            
                        </div>
                        <div class="col">
                            <a asp-action="DetailReplies" asp-route-Id="@Model.QueryId" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i>  Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@

            </div>
        </div>
    </div>



</form>


@section Scripts{

    @{
                        <partial name="_ValidationScriptsPartial" />
    }
}


