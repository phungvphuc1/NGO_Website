@model IEnumerable<Query>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Help Center </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Common Question
            </a>
        </div>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {

        <table class="table table-bordered  table-striped text-center" id="example">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>
                        Question
                    </th>
                    <th>Content</th>



                    <th> Action </th>
                </tr>
            </thead>
            <tbody>
                @{ var count = 0;}
                @foreach (var obj in Model)
                {

                    count++;
                    <tr>


                        <td>@count</td>
                        <td>@obj.Title</td>
                        <td width="50%">@obj.Content</td>






                        <td width="20%">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                                <a asp-route-Id="@obj.Id" asp-action="Detail" class="btn btn-info mx-2">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table> }
    else
    {
        <p> No Question exit</p>}


    <a asp-action="Index" class="btn btn-success w-30 float-right mt-5">
        <i class="fas fa-sign-out-alt"></i>  Back
    </a>

</div>


@section Scripts{



    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>

}







