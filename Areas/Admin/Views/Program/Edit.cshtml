@model NGOWebApp.Models.Programs

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Campaign</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Title Program</label>
                        <input asp-for="ShortContent" class="form-control" />
                        <span asp-validation-for="ShortContent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Partner Name</label>
                        <select asp-for="PartnerId" asp-items="@ViewBag.partnerList" class="form-control">
                            <option value="@Model.GetPartner.Id" selected>@Model.GetPartner.OrgName (Selected)</option>
                        </select>
                        <span asp-validation-for="PartnerId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Expected Amount ($)</label>
                        <input asp-for="ExpectedAmount" type="number" class="form-control" />
                        <span asp-validation-for="ExpectedAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control">
                            @if (Model.Status == 1)
                            {
                                <option value="1" selected>Call for donations</option>
                            }
                            else
                            {
                                <option value="1">Call for donations</option>
                            }
                            @if (Model.Status == 2)
                            {
                        <option value="2" selected>Donation has been completed</option>
                            }
                            else
                            {
                        <option value="2">Donation has been completed</option>
                            }
                            @if (Model.Status == 3)
                            {
                        <option value="3" selected>Complete program</option>
                            }
                            else
                            {
                        <option value="3">Complete program</option>
                            }
                           
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {

    @await Html.PartialAsync("_Summernote", new { height = 1000, selector = "#Content" })
}

