@model NGOWebApp.Models.Programs

@{
    ViewData["Title"] = "Create";
}

<h1>Create Campaign</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span class="text-danger">@ViewBag.Exist</span>
            <div class="row">
                <div class="col-md-6">
                  
                    <div class="form-group">
                        <label class="control-label">Title Program</label>
                        <input asp-for="ShortContent" class="form-control" />
                        <span asp-validation-for="ShortContent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Partner Name</label>
                        <select asp-for="PartnerId" asp-items="@ViewBag.partnerList" class="form-control"></select>
                        <span asp-validation-for="PartnerId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Expected Amount ($)</label>
                        <input asp-for="ExpectedAmount" type="number" class="form-control" />
                        <span asp-validation-for="ExpectedAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Duration" class="control-label"></label>
                        <select asp-for="Duration" class="form-control">
                            <option selected value="@DateTime.Now.AddMonths(1)">1 Mouth</option>
                            <option value="@DateTime.Now.AddMonths(2)">2 Mouth</option>
                            <option value="@DateTime.Now.AddMonths(3)">3 Mouth</option>
                        </select>
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control">
                            <option value="1">Call for donations</option>
                            <option value="2">Donation has been completed</option>
                            <option value="3">Complete program</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Photo of Program</label>
                        <input type="file" name="file" class="form-control" />   
                        <span class="text-danger">@ViewBag.Msg</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>             
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
     
    @await Html.PartialAsync("_Summernote", new { height = 1000, selector = "#Content" })
}

