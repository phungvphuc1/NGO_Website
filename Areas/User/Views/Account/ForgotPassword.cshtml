@model Account
    <!-- Page Header Start -->
<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>Forgot password</h2>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5" style=" margin-top: 5vh !important">
                <div class="card-header"><h3 class="text-center font-weight-light my-4"></h3></div>
                <div class="card-body">
                    <form method="post" asp-action="ForgotPassword">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            @if(ViewBag.Error != null)
            {
                                <p class="text-danger"> @ViewBag.Error</p>
            }
                        </div>
                        <input type="submit" class="btn btn-primary float-right" value="Submit"/>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <div class="large"><a asp-action="Register" asp-controller="Account" asp-area="User">Need an account? Sign up!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }



}